<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000309" >

    <ImageView
        android:layout_width="92dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:background="@drawable/launch_logo_two" />

    <TextView
        android:id="@+id/tv_banquan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/banquan"
        android:textColor="#4a4a4a"
        android:textSize="10sp" />

    <ImageView
        android:layout_width="144dp"
        android:layout_height="16dp"
        android:layout_above="@id/tv_banquan"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:background="@drawable/launch_logo_two_button" />

</RelativeLayout>