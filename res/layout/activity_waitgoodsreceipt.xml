<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111a32"
    >
<RelativeLayout
        android:id="@+id/crowd_wait_goods_receipt_top"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:background="#060f23" >

        <TextView
            android:id="@+id/crowd_wait_goods_receipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/crowd_dingdanxiangiqng"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/crowd_wait_goods_receipt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back" />
    </RelativeLayout>
    <ScrollView 
        android:layout_below="@+id/crowd_wait_goods_receipt_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
              
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46.5dp"
        android:background="#040917" >

        <ImageView
            android:id="@+id/imageViewwait_goods_receipt"
            android:layout_width="30dp"
            android:layout_height="29dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/zhifuchenggongtubiao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imageViewwait_goods_receipt"
            android:text="已付款"
            android:textColor="#ffffff"
            android:textSize="17sp" />
    </RelativeLayout>

     <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#46cafd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#111a32"
        android:visibility="gone"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/zhongchou_daifahuo_shangpincanyindingdan_dingdanyitijiao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="订单已提交"
            android:textColor="@color/white_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/zhongchou_daifahuo_shangpincanyindingdan_dingdanyiqueren"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="订单已确认"
            android:textColor="@color/white_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/zhongchou_daifahuo_shangpincanyindingdan_dingdapeisongzhong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="正在配送"
            android:textColor="@color/white_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/zhongchou_daifahuo_shangpincanyindingdan_yisongda"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已送达"
            android:textColor="@color/white_gray"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="#111a32" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="49dp"
            android:layout_marginRight="49dp"
            android:scaleType="centerCrop"
            android:src="@drawable/four_three" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal" >

        </LinearLayout>
    </RelativeLayout>
    
    <com.lesports.stadium.view.CustomExpandableListView 
        android:id="@+id/order_all_daifukuan_listview"
        android:layout_width="match_parent"
        android:childIndicator="@null"
        android:divider="@null"
        android:groupIndicator="@null"
        android:layout_height="wrap_content"
        ></com.lesports.stadium.view.CustomExpandableListView>
    <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#040917" >

                <TextView
                    android:id="@+id/order_daifukuan_shouhuodizhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="收货地址"
                    android:textColor="#ffffff"
                    android:textSize="17sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/order_daifukuan_address_choise"
                android:layout_width="match_parent"
                android:layout_height="107dp"
                 >

                <ImageView
                    android:id="@+id/order_daifukuan_dingdanzhif_dizhibiaoshi"
                    android:layout_width="13.5dp"
                    android:layout_height="18.5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="11dp"
                    android:src="@drawable/icon_address" />

                <TextView
                    android:id="@+id/order_daifukuan_dingdanzhifu_shouhuoren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="34.5dp"
                    android:layout_marginTop="15dp"
                    android:text="收货人："
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/order_daifukuan_dingdanzhifu_shouhuoren_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/order_daifukuan_dingdanzhifu_shouhuoren"
                    android:layout_toRightOf="@+id/order_daifukuan_dingdanzhifu_shouhuoren"
                    android:text="菁菁"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/order_daifukuan_dingdanzhifu_shouhuoren_dianhua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="39dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/order_daifukuan_dingdanzhifu_shouhuoren_dizhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/order_daifukuan_dingdanzhifu_shouhuoren"
                    android:layout_below="@+id/order_daifukuan_dingdanzhifu_shouhuoren"
                    android:layout_marginTop="10dp"
                    android:text="收货地址："
                    android:textColor="@color/white_gray"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/order_daifukuan_dingdanzhifu_shouhuoren_youxiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_daifukuan_dingdanzhifu_shouhuoren_dizhi"
                    android:layout_marginLeft="34.5dp"
                    android:layout_marginTop="10dp"
                    android:text="邮箱地址："
                    android:visibility="gone"
                    android:textColor="@color/white_gray"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/order_daifukuan_dingdanzhifu_shouhuoren_jiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_select_passeger" />

            </RelativeLayout>
            
            
        </LinearLayout>
        
    </ScrollView>
  <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="75dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textColor="#46cafd"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/pay_success_solid"
                    android:text="@string/crowd_tixingfahuo" />
                
            </RelativeLayout>
</RelativeLayout>
