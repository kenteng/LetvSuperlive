<?xml version="1.0" encoding="utf-8"?>
<com.lesports.stadium.lsyvideo.ui.view.V4LargeLiveMediaController xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    
     >
<!--     android:paddingLeft="8dp" -->
<!--     android:paddingRight="8dp" -->
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/vnew_play_btn"
        android:visibility="gone"
        android:background="@color/letv_skin_vnew_controller_background"
         />
    
    <include
        android:id="@+id/vnew_back_to_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/vnew_seekbar"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-25dp"
        android:visibility="invisible"
        layout="@layout/letv_skin_v4_back_to_live" />

    <com.lesports.stadium.lsyvideo.ui.view.V4LivePlayBtn
        android:id="@+id/vnew_play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:padding="10dp" />

    <com.lesports.stadium.lsyvideo.ui.view.V4ChgScreenBtn
        android:id="@+id/vnew_chg_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:padding="10dp" />
    
    	<!-- 弹幕开关 -->
	 <com.lesports.stadium.view.WiperSwitch
        android:id="@+id/wi_swi"
        android:layout_width="42dp"
        android:layout_height="18dp"
        android:layout_marginRight="10dp"
         android:layout_alignTop="@id/vnew_chg_btn"
		android:layout_alignBottom="@id/vnew_chg_btn"
        android:layout_toLeftOf="@id/vnew_chg_btn" 
        android:layout_marginTop="12dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/vnew_chg_btn"
		android:layout_alignBottom="@id/vnew_chg_btn"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/wi_swi"
        android:gravity="center"
        android:text="弹幕"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <com.lesports.stadium.lsyvideo.ui.view.V4RateTypeBtn
        android:id="@+id/vnew_rate_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@id/vnew_chg_btn"
        android:background="@drawable/letv_skin_v4_large_controller_ratetype_bg"
        android:textColor="@color/letv_color_ffffffff"
        android:visibility="gone"
        android:textSize="14sp" />
    
     <include
        android:id="@+id/vnew_seekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/vnew_change_mode"
        android:layout_toRightOf="@id/vnew_play_btn"
        android:visibility="invisible"
        layout="@layout/letv_skin_v4_small_seekbar_layout" />

     
     <com.lesports.stadium.lsyvideo.ui.view.V4ChangeModeBtn
	    android:id="@+id/vnew_change_mode"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_marginLeft="10dp"
	    android:visibility="gone"
	    android:layout_toLeftOf="@id/vnew_rate_btn" />

</com.lesports.stadium.lsyvideo.ui.view.V4LargeLiveMediaController>