<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#060f23"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp" >

        <ImageView
            android:id="@+id/nengliangzhi_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/nengliangzhi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="48dp"
            android:layout_centerInParent="true"
            android:text="@string/nengliangzhi_title"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/white_line_color"
        />
    
     <com.lesports.stadium.pullrefreshview.PullToRefreshListView
          xmlns:ptr="http://schemas.android.com/apk/res-auto" 
         android:id="@+id/nengliangzhi_listview" 
         android:layout_width="match_parent"
         android:layout_height="match_parent"
        android:cacheColorHint="@android:color/white"
        android:divider="@color/sence_background"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:listSelector="#00000000" 
        android:footerDividersEnabled="false"
    	android:headerDividersEnabled="false"   
         >
     </com.lesports.stadium.pullrefreshview.PullToRefreshListView>

</LinearLayout>
