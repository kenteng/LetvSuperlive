<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111a32" >

    <ImageView
        android:id="@+id/back_tick_order"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/back_tick_order"
        android:layout_alignTop="@id/back_tick_order"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:text="支付成功"
        android:textColor="#ffffff"
        android:textSize="17sp" />

    <View
        android:id="@+id/line_tick_order"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/back_tick_order"
        android:background="#1fffffff" />

    <RelativeLayout
        android:id="@+id/fukuan"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_below="@id/line_tick_order"
        android:background="#040917" >

        <ImageView
            android:id="@+id/cdengdaimaijiashouhuo_top_receipt"
            android:layout_width="30dp"
            android:layout_height="29dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/zhifuchenggongtubiao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/cdengdaimaijiashouhuo_top_receipt"
            android:text="已付款"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/fukuan_line"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/fukuan"
        android:background="#46cafd" />

    <TextView
        android:id="@+id/tick_name"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_below="@id/fukuan_line"
        android:background="#040917"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="黄义达十周年纪念演唱会"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/cdengdaimaijiashouhuo__shouhuodizhi"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#060f23"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="收货地址"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <RelativeLayout
            android:id="@+id/cdengdaimaijiashouhuo_choise"
            android:layout_width="match_parent"
            android:layout_height="107dp" >

            <ImageView
                android:id="@+id/cdengdaimaijiashouhuo_dizhibiaoshi"
                android:layout_width="13.5dp"
                android:layout_height="18.5dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:src="@drawable/icon_address" />

            <TextView
                android:id="@+id/cdengdaimaijiashouhuo_shouhuoren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="34.5dp"
                android:layout_marginTop="15dp"
                android:text="收货人："
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/cdengdaimaijiashouhuo_shouhuoren_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cdengdaimaijiashouhuo_shouhuoren"
                android:layout_toRightOf="@+id/cdengdaimaijiashouhuo_shouhuoren"
                android:text="菁菁"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/cdengdaimaijiashouhuo_shouhuoren_dianhua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="39dp"
                android:layout_marginTop="15dp"
                android:text="18515041242"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/cdengdaimaijiashouhuo_shouhuoren_dizhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/cdengdaimaijiashouhuo_shouhuoren"
                android:layout_below="@+id/cdengdaimaijiashouhuo_shouhuoren"
                android:layout_marginTop="10dp"
                android:text="收货地址："
                android:textColor="@color/white_gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/cdengdaimaijiashouhuo_shouhuoren_youxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cdengdaimaijiashouhuo_shouhuoren_dizhi"
                android:layout_marginLeft="34.5dp"
                android:layout_marginTop="10dp"
                android:text="邮箱地址："
                android:textColor="@color/white_gray"
                android:textSize="13sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/cdengdaimaijiashouhuo_shouhuoren_jiantou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_select_passeger"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dingche"
                android:layout_width="fill_parent"
                android:layout_height="33dp"
                android:layout_below="@id/cdengdaimaijiashouhuo_shouhuoren_dizhi"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/recharge_tx_background"
                android:gravity="center"
                android:text="预定接送车"
                android:textColor="#ffffff"
                android:textSize="17sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bottom_ll"
        android:layout_below="@id/tick_name" >
        <TextView
            android:id="@+id/amount"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="共1件商品"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/allprize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/amount"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/amount"
            android:layout_marginRight="10dp"
            android:text="合计：￥518(含运费10)"
            android:textColor="#ffffff" />
         <View
            android:id="@+id/tick_line"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_above="@+id/amount"
            android:background="#1fffffff" />

        <ListView
            android:id="@+id/tick_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none"
            android:divider="@null"
            android:layout_above="@id/tick_line" >
        </ListView>
    </RelativeLayout>

</RelativeLayout>