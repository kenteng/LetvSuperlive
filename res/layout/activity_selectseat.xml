<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lesports.stadium.activity.SelectSeatActivity" 
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <RelativeLayout 
	    android:id="@+id/rl_thum"
	    android:layout_width="match_parent"
	    android:layout_height="100dp"
	    android:background="@android:color/darker_gray"
	    >
	    <com.lesports.stadium.view.SSThumView
                android:id="@+id/ss_ssthumview"
                android:layout_width="@dimen/ss_seat_thum_size_w"
                android:layout_height="@dimen/ss_seat_thum_size_h"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="5.0dip" />
	    
	</RelativeLayout>
		
    
    	<com.lesports.stadium.view.SSView 
	    android:id="@+id/mSSView"
	    android:layout_below="@id/rl_thum"
	    android:layout_marginTop="20dp"
	    android:layout_width="match_parent"
	    android:layout_height="250dp"
	    />
    </RelativeLayout>

</LinearLayout>
