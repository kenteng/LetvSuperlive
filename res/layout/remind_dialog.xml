<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_30"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_remind_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.4"
        android:lines="2"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_28" />

    <View
        android:id="@+id/minddle_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#669d9d9d"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/llyt_confirm_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="100"
            android:gravity="center"
            android:text="取消"
            android:textColor="#40caff"
            android:textSize="18sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#669d9d9d" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="100"
            android:gravity="center"
            android:text="立即登录"
            android:textColor="#40caff"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyt_confirm"
        android:layout_width="200dp"
        android:layout_height="33dp"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical" >
<!--         android:background="@drawable/recharge_tx_background" -->

        <TextView
            android:id="@+id/tv_confirm_close"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="确定"
            android:textColor="#40caff"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>