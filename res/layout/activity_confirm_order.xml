<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/common_title" />
	<ScrollView     
       android:layout_width="fill_parent"
       android:layout_height="match_parent"
       android:scrollbars="none"
       android:background="#111a32">
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:padding="10dp"
           >
              <LinearLayout 
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#2d324b"
                  android:orientation="vertical">
	               <LinearLayout 
	                   android:layout_width="match_parent"
	                   android:layout_height="53dp"
	                   android:orientation="horizontal"
	                   android:baselineAligned="false"
	                   >
		                   <LinearLayout 
		                       android:layout_width="0dp"
		                       android:layout_height="match_parent"
		                       android:layout_weight="4"
		                       android:gravity="center">
		                       <ImageView 
		                           android:layout_width="23dp"
		                           android:layout_height="23dp"
		                           android:src="@drawable/ic_passengers"/>
		                   </LinearLayout>
		                   <LinearLayout 
		                       android:layout_width="0dp"
		                       android:layout_height="match_parent"
		                       android:layout_weight="27"
		                       android:orientation="vertical"
		                       android:paddingTop="6.5dp"
		                       android:paddingBottom="6.5dp"
		                       android:paddingLeft="10dp">
		                       <TextView 
		                           android:id="@+id/tv_passenger_name"
		                           android:layout_width="match_parent"
		                           android:layout_height="wrap_content"
		                           android:textSize="@dimen/txt_size_28"
		                           android:textColor="@color/white"
		                           android:text="本人乘车"/>
		                       
		                        <TextView 
		                           android:id="@+id/tv_passenger_phone"
		                           android:layout_width="match_parent"
		                           android:layout_height="wrap_content"
		                           android:textSize="@dimen/txt_size_30"
		                           android:textColor="@color/white"
		                           android:layout_marginTop="4dp"
		                           android:text="151****6103"/>
		                   </LinearLayout>
		          </LinearLayout>
		          <View 
			        android:layout_width="fill_parent"
			        android:layout_height="1dp"
			        android:background="@color/line_color"
			        android:layout_marginLeft="7.5dp"
			        android:layout_marginRight="7.5dp"/>
		          <LinearLayout 
	                   android:layout_width="match_parent"
	                   android:layout_height="53dp"
	                   android:orientation="horizontal"
	                   >
		                   <LinearLayout 
		                       android:layout_width="0dp"
		                       android:layout_height="match_parent"
		                       android:layout_weight="4"
		                       android:gravity="center">
		                       <ImageView 
		                           android:layout_width="23dp"
		                           android:layout_height="23dp"
		                           android:src="@drawable/ic_time"/>
		                   </LinearLayout>
		                   <LinearLayout 
		                        android:layout_width="0dp"
		                        android:layout_height="match_parent"
		                        android:layout_weight="27"
		                        android:orientation="vertical"
		                        android:paddingTop="6.5dp"
		                        android:paddingBottom="6.5dp"
		                        android:paddingLeft="10dp">
		                         <TextView 
		                           android:id="@+id/tv_day"
		                           android:layout_width="match_parent"
		                           android:layout_height="wrap_content"
		                           android:textSize="@dimen/txt_size_28"
		                           android:textColor="@color/service_select_txt"
		                           android:text="今天"/>
		                       
		                        <TextView 
		                           android:id="@+id/tv_time"
		                           android:layout_width="match_parent"
		                           android:layout_height="wrap_content"
		                           android:textSize="@dimen/txt_size_24"
		                           android:textColor="@color/white"
		                           android:layout_marginTop="4dp"
		                           android:text="1月15号  16:30"/>
		                   </LinearLayout> 
		          </LinearLayout>
	          </LinearLayout>
	          
	          <!-- 2 -->
	          <LinearLayout 
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#2d324b"
                  android:orientation="vertical"
                  android:layout_marginTop="10dp">
		          <LinearLayout 
	                   android:layout_width="match_parent"
	                   android:layout_height="53dp"
	                   android:orientation="horizontal"
	                   android:background="#2d324b"
	                   android:baselineAligned="false"
	                   >
		                   <LinearLayout 
		                       android:layout_width="0dp"
		                       android:layout_height="match_parent"
		                       android:layout_weight="4"
		                       android:gravity="center">
		                       <ImageView 
		                           android:layout_width="13dp"
		                           android:layout_height="15dp"
		                           android:src="@drawable/ic_location"/>
		                   </LinearLayout>
		                   <LinearLayout 
		                       android:id="@+id/llyt_start_location"
		                       android:layout_width="0dp"
		                       android:layout_height="match_parent"
		                       android:layout_weight="27"
		                       android:orientation="horizontal"
		                       android:paddingLeft="10dp"
		                       android:gravity="center_vertical">
		                       <TextView 
		                           android:layout_width="match_parent"
		                           android:layout_height="wrap_content"
		                           android:text="五棵松"
		                           android:textSize="@dimen/txt_size_30"
		                           android:textColor="@color/white"
		                           android:layout_marginTop="4dp"/>
		                   </LinearLayout>
		          </LinearLayout>
		          <View 
			        android:layout_width="fill_parent"
			        android:layout_height="1dp"
			        android:background="@color/line_color"
			        android:layout_marginLeft="7.5dp"
			        android:layout_marginRight="7.5dp"/>
		          <LinearLayout 
	                   android:layout_width="match_parent"
	                   android:layout_height="53dp"
	                   android:orientation="horizontal"
	                   android:background="#2d324b">
		                   <LinearLayout 
		                       android:layout_width="0dp"
		                       android:layout_height="match_parent"
		                       android:layout_weight="4"
		                       android:gravity="center">
		                       <ImageView 
		                           android:layout_width="9.5dp"
		                           android:layout_height="9.5dp"
		                           android:src="@drawable/ic_destination"
		                           android:contentDescription="@null"/>
		                   </LinearLayout>
		                   <RelativeLayout 
		                       android:id="@+id/rlyt_get_off"
		                       android:layout_width="0dp"
		                       android:layout_height="match_parent"
		                       android:layout_weight="27"	
		                       android:paddingLeft="10dp">
		                       <TextView 
		                           android:id="@+id/tv_destination"
		                           android:layout_width="wrap_content"
		                           android:layout_height="wrap_content"
		                           android:textColor="@color/white"
		                           android:textSize="@dimen/txt_size_30"
		                           android:layout_centerVertical="true"
		                           android:text="北京市海淀区上地科创大厦"/>
		                   </RelativeLayout> 
		          </LinearLayout>
	           </LinearLayout>
	           
	          <!-- 选车 -->
	          <RelativeLayout 
	              android:layout_width="match_parent"
	              android:layout_height="55dp"
	              android:paddingLeft="20dp"
	              android:paddingRight="20dp"
	              android:layout_marginTop="20dp"
	              >
	             	 <ImageView 
	             	   android:id="@+id/ic_bg_select_car"
	                   android:layout_width="match_parent"
	                   android:layout_height="wrap_content"
	                   android:src="@drawable/bg_select_car"
	                   android:layout_centerInParent="true"
	                   android:layout_marginLeft="15dp"
	                   android:layout_marginRight="15dp"
	                   android:contentDescription="@null"/>
	             	 <LinearLayout 
	             	     android:id="@+id/llyt_car_name"
	             	     android:layout_width="match_parent"
	             	     android:layout_height="wrap_content"
	             	     android:layout_marginLeft="4dp"
	                     android:layout_marginRight="0dp"
	             	     android:layout_below="@+id/ic_bg_select_car"
	             	     android:orientation="horizontal"
	             	     android:layout_marginTop="7.5dp">
	             	     <TextView 
	             	         android:layout_width="0dp"
	             	         android:layout_weight="1"
	             	         android:layout_height="wrap_content"
	             	         android:textColor="@color/white"
	             	         android:gravity="left"
	             	         android:textSize="@dimen/txt_size_24"
	             	         android:text="@string/models_tesla"/>
	             	     <TextView 
	             	         android:layout_width="0dp"
	             	         android:layout_weight="1.1"
	             	         android:layout_height="wrap_content"
	             	         android:textColor="@color/white"
	             	         android:gravity="center"
	             	         android:textSize="@dimen/txt_size_24"
	             	         android:text="@string/models_cheap"/>
	             	     <TextView 
	             	         android:layout_width="0dp"
	             	         android:layout_weight="1"
	             	         android:layout_height="wrap_content"
	             	         android:textColor="@color/white"
	             	         android:gravity="center"
	             	         android:textSize="@dimen/txt_size_24"
	             	         android:text="@string/models_charming"
	             	         android:layout_marginLeft="15dp"/>
	             	     <TextView 
	             	         android:layout_width="0dp"
	             	         android:layout_weight="1"
	             	         android:layout_height="wrap_content"
	             	         android:textColor="@color/white"
	             	         android:gravity="right"
	             	         android:textSize="@dimen/txt_size_24"
	             	         android:text="@string/models_business"/>
	             	 </LinearLayout>
		              <LinearLayout 
		                  android:layout_width="match_parent"
		                  android:layout_height="fill_parent"
		                  android:orientation="horizontal"
		                  android:gravity="center_vertical">
		                  <ImageView 
		                      android:id="@+id/iv_car"
		                      android:layout_width="30dp"
		                      android:layout_height="30dp"
		                      android:src="@drawable/ic_tesla"/>
		              </LinearLayout>
	          </RelativeLayout>
	          
	          <!-- 4 -->
	          <LinearLayout 
	              android:id="@+id/llyt_"
	              android:layout_width="match_parent"
	              android:layout_height="77dp"
	              android:orientation="horizontal"
	              android:background="#2d324b"
	              android:baselineAligned="false"
	              android:layout_marginTop="30dp">
	              <RelativeLayout 
	                  android:layout_weight="99"
	                  android:layout_height="match_parent"
	                  android:layout_width="0dp"
	                  android:gravity="center">
	                  <TextView 
	                      android:id="@+id/tv_price"
	                      android:layout_width="wrap_content"
	                      android:layout_height="wrap_content"
	                      android:text="22"
	                      android:textColor="@color/service_select_txt"
	                      android:textSize="@dimen/txt_size_40"
	                      android:layout_marginRight="6dp"
	                      android:layout_centerVertical="true"/>
	                  <TextView 
	                      android:id="@+id/iv_unit"
	                      android:layout_width="wrap_content"
	                      android:layout_height="wrap_content"
	                      android:text="元"
	                      android:textColor="@color/white"
	                      android:textSize="@dimen/txt_size_24"
	                      android:layout_toRightOf="@+id/tv_price"
	                      android:layout_centerVertical="true"/>
	              </RelativeLayout>
	              <RelativeLayout 
	                  android:layout_weight="1"
	                  android:layout_height="match_parent"
	                  android:layout_width="0dp">
	                  <View 
	                      android:layout_width="1dp"
	                      android:layout_height="28.5dp"
	                      android:layout_centerInParent="true"
	                      android:background="@color/service_select_txt"/>
	              </RelativeLayout>
	              <RelativeLayout 
	                  android:layout_weight="99"
	                  android:layout_height="match_parent"
	                  android:layout_width="0dp"
	                  android:gravity="center">
	                  <TextView 
	                      android:id="@+id/tv_up"
	                      android:layout_width="wrap_content"
	                      android:layout_height="wrap_content"
	                      android:text="充值100%返现"
	                      android:textColor="@color/white"
	                      android:textSize="@dimen/txt_size_24"
	                      android:layout_marginRight="6dp"
	                      android:layout_centerVertical="true"/>
	                  <TextView 
	                      android:id="@+id/iv_down"
	                      android:layout_width="wrap_content"
	                      android:layout_height="wrap_content"
	                      android:text="相当于打5折"
	                      android:textColor="@color/white"
	                      android:textSize="@dimen/txt_size_24"
	                      android:layout_below="@+id/tv_up"
	                      android:layout_centerVertical="true"/>
	              </RelativeLayout>
	          </LinearLayout>
	          
	          <!-- 5 -->
	         <RelativeLayout 
	             android:id="@+id/rlyt_order"
	             android:layout_width="match_parent"
	             android:layout_height="42.5dp"
	             android:gravity="center"
	             android:layout_marginTop="27.5dp"
	             android:background="@drawable/btn_cnfirm_bg"
	             android:layout_marginLeft="32.5dp"
	             android:layout_marginRight="32.5dp"
	             android:layout_marginBottom="50dp"
	             >
	             <TextView 
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:text="@string/confirm_order"
	                 android:textColor="@color/white"
	                 android:textSize="@dimen/txt_size_36"/>
	         </RelativeLayout>  
       </LinearLayout>
	</ScrollView>
</LinearLayout>