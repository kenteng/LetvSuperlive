<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:background="#111a32"
        >
        <ImageView
            android:id="@+id/order_child_goupiao_image_s"
            android:layout_width="86dp"
            android:layout_height="106dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/zhoubianshangpin_zhanwei" />
        <TextView
            android:id="@+id/order_child_goupiao_jiage_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@+id/order_child_goupiao_image_s"
            android:layout_toRightOf="@+id/order_child_goupiao_image_s"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:text="￥222" />
        
        <TextView
            android:id="@+id/goupiao_order_child_goods_shouhuodizhi_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_alignBottom="@+id/order_child_goupiao_image_s"
            android:layout_toRightOf="@+id/order_child_goupiao_image_s"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:text="北排32号" />

        <View 
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/white_line_color"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            
            />

        <TextView
            android:id="@+id/order_child_goupiao_shuliang_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/order_child_goupiao_jiage_s"
            android:layout_marginRight="19dp"
            android:text="X1"
            android:textColor="@color/white" />

    </RelativeLayout>

</LinearLayout>
