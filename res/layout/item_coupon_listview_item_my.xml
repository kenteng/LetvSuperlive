<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111a32"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/my_youhuiquan_item_beijingtu"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/youhuiquanbeijing" />

    <ImageView
        android:id="@+id/my_youhuiquan_item_shifouxuanzhongkuang"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignBottom="@+id/my_youhuiquan_item_beijingtu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/youhuiquanxuanzhong" />

    <TextView
        android:id="@+id/my_youhuiquan_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="127dp"
        android:layout_marginTop="32dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="餐饮券" />

    <TextView
        android:id="@+id/my_youhuiquan_item_jinqianshu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="18dp"
        android:text="￥15"
        android:textColor="#46cafd"
        android:layout_marginTop="13sp"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/my_youhuiquan_item_youxoaoriqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/my_youhuiquan_item_beijingtu"
        android:layout_alignLeft="@+id/my_youhuiquan_item_jinqianshu"
        android:layout_marginBottom="17.5dp"
        android:textColor="@color/white_gray"
        android:textSize="12sp"
        android:text="有效日期:" />

    <TextView
        android:id="@+id/my_youhuiquan_item_youxiaoriqi_riqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/my_youhuiquan_item_youxoaoriqi"
        android:layout_toRightOf="@+id/my_youhuiquan_item_youxoaoriqi"
        android:textColor="@color/white_gray"
        android:textSize="12sp"
        android:text="2015.2.1-2015.3.1" />

    <TextView
        android:id="@+id/my_youhuiquan_item_youhuiquanshiyongshuoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/my_youhuiquan_item_youxoaoriqi"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white_gray"
        android:textSize="12sp"
        android:layout_alignLeft="@+id/my_youhuiquan_item_youxoaoriqi"
        android:text="订单满20元使用" />
    
    <RelativeLayout 
        android:id="@+id/my_layout_youhuiquan_yijingshixiao"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:visibility="gone"
        android:background="#a0666666"
        android:layout_marginTop="5dp"
        ></RelativeLayout>

    <ImageView
        android:id="@+id/my_youhuiquan_item_zhongleitupian"
        android:layout_width="75.7dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/goupiaoquan" />

    <TextView
        android:id="@+id/my_youhuiquan_item_qushiyong"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/my_youhuiquan_item_youxiaoriqi_riqi"
        android:layout_alignLeft="@+id/my_youhuiquan_item_zhongleitupian"
        android:text="去使用"
        android:gravity="center"
        android:background="@drawable/paymoney_style"
        android:textColor="@color/white"
        android:textSize="14sp" />

</RelativeLayout>
