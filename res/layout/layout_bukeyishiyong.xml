<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111a32"
    android:gravity="center"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/bukeyishiyong_all_prize_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:divider="#00000000"
        android:dividerHeight="15dp"
        android:gravity="center"
        android:visibility="gone" />

    <RelativeLayout 
        android:id="@+id/youhuiquanbukeyong_meishuju"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/youhuiquanbukeyong_meishujusss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:src="@drawable/wukeyongyouhuiquan" />

        <TextView
            android:id="@+id/youhuiquanbukeyong_meishujussssss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/youhuiquanbukeyong_meishujusss"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="没有可用的优惠券" />
        
    </RelativeLayout>

</LinearLayout>