    <TextView
        android:id="@+id/tv_title"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:text="RENEXT我敢"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="8dp"
        android:text="演唱会新闻发布会"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_next"
        android:layout_marginTop="18dp"
        android:maxLines="2"
        android:text="刘若英出道二十载依旧我敢带观众重温那些年"
        android:textColor="@color/gray"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/iv_detail_back"
        android:layout_width="10dp"
        android:layout_height="18dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/live_bac"
        android:padding="15dp" />

    <ImageView
        android:id="@+id/iv_detail_more"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/live_detail_more"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_middle"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/video_flv"
        android:background="@color/black"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_title_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/tv_discuss"
            android:textColor="#379ec7"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_title_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/tv_lyrics"
            android:textColor="#8d8d8d"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_title_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/tv_surrounding"
            android:textColor="#8d8d8d"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_title_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/interactive"
            android:textColor="#8d8d8d"
            android:textSize="15sp" />
    </LinearLayout>
    <!-- 下划线 -->

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="10dp"
        android:layout_height="2dp"
        android:background="@color/service_select_txt" />

    <com.lesports.stadium.view.MyViewPager
        android:id="@+id/vp_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_middle"
        android:layout_marginTop="2dp" >
    </com.lesports.stadium.view.MyViewPager>

</RelativeLayout>