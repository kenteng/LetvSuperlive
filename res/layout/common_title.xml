<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_titlebar_height"
    android:background="@color/sence_titlebar_background"
    android:orientation="vertical"
    >
       <ImageView
           android:id="@+id/title_left_iv"
           style="@style/view_layout_ww"
           android:contentDescription="@null"
           android:src="@drawable/ic_back"
           android:scaleType="centerInside"
           android:layout_centerVertical="true"
          />
       
      <TextView
            android:id="@+id/tv_title"
            style="@style/view_layout_ww"
            android:textColor="@color/white"     
            android:textSize="@dimen/txt_size_36" 
            android:layout_centerInParent="true"
            android:text="上车位置"/>

      <TextView 
          android:id="@+id/tv_btn"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="保存"
          android:textColor="@color/word_gray"
          android:textSize="@dimen/txt_size_24"
          android:gravity="center"
          android:layout_alignParentRight="true"
          android:paddingLeft="20dp"
          android:layout_marginRight="10dp"
          android:visibility="gone"/>
</RelativeLayout>
