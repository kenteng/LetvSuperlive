<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111a32"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout 
        android:id="@+id/waitpay_order_layout_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/waitpay_order_layout_no_datassss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:visibility="gone"
            android:text="" />

    </RelativeLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshExpandableListView 
        android:id="@+id/waitpay_all_ketuozhan_listview"
        android:layout_width="match_parent"
        android:childIndicator="@null"
        android:groupIndicator="@null"
        android:divider="@null"
        android:layout_height="match_parent"
        android:scrollbars="none"
        ptr:ptrMode="both"
         xmlns:ptr="http://schemas.android.com/apk/res-auto"
        ptr:ptrHeaderBackground="#111a32"
        ptr:ptrHeaderTextColor="@android:color/white"
        ></com.handmark.pulltorefresh.library.PullToRefreshExpandableListView>
</LinearLayout>