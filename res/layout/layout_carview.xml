            <RelativeLayout
                android:id="@+id/rlyt_order"
                android:layout_width="match_parent"
                android:layout_height="42.5dp"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="32.5dp"
                android:layout_marginRight="32.5dp"
                android:layout_marginTop="27.5dp"
                android:background="@drawable/order_click"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/custom_car"
                    android:textColor="@color/service_select_txt"
                    android:textSize="@dimen/txt_size_36" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>