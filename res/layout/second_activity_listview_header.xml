<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/sence_background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/layout_second_activity_header_topsss"
            android:layout_width="match_parent"
            android:layout_height="150dp" >

            <android.support.v4.view.ViewPager
                android:id="@+id/second_activity_top_viewpager"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/huodongshouye_zhanwei" />

            <LinearLayout
                android:id="@+id/goods_layout_addview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="3dip"
                android:orientation="horizontal" >
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_shouyemian_firstshows"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#111a32"
            android:orientation="horizontal" >

             <RelativeLayout
                android:id="@+id/layout_shouye_daohang_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawableTop="@drawable/shouye_daohang"
                    android:gravity="center"
                    android:text="@string/daohang"
                    android:textColor="#46cafd" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_shouye_canyin_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawableTop="@drawable/shouyemian_canyin_1"
                    android:gravity="center"
                    android:text="@string/food"
                    android:textColor="#46cafd" />
            </RelativeLayout>

            

            <RelativeLayout
                android:id="@+id/layout_shouye_shangcheng_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawableTop="@drawable/shouyemian_shangcheng_1"
                    android:gravity="center"
                    android:text="商城"
                    android:textColor="#46cafd" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_shouye_yongche_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawableTop="@drawable/shouyemian_car_1"
                    android:gravity="center"
                    android:text="用车"
                    android:textColor="#46cafd" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>