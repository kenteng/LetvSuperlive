<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="#060f23"
    android:gravity="center" >

    <ImageView
        android:id="@+id/iv_left"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/iv_leftmenu" />

    <ImageView
        android:id="@+id/iv_scan"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:src="@drawable/iv_scan" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_left"
        android:layout_alignTop="@id/iv_left"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="　"
        android:textColor="#46cafd"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_address"
        android:layout_width="18dp"
        android:layout_height="23dp"
        android:layout_alignBottom="@id/iv_left"
        android:layout_alignTop="@id/iv_left"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@id/tv_address"
        android:src="@drawable/iv_address" />

    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_alignBottom="@id/iv_left"
        android:layout_alignTop="@id/iv_left"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:layout_toLeftOf="@id/iv_address"
        android:layout_toRightOf="@id/iv_left"
        android:background="@drawable/main_edittex_bg"
        android:gravity="center" >

        <ImageView
            android:id="@+id/iv_con_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search_iv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_con_search"
            android:layout_alignTop="@id/iv_con_search"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_con_search"
            android:gravity="center"
            android:text="搜索"
            android:textColor="#3b5287"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>