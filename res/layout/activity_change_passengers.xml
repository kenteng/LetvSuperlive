<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_view" >
    <include layout="@layout/common_title"/>
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="58.5dp"
                android:orientation="horizontal"
                >
                <RelativeLayout 
                    android:layout_weight="27"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="22.9dp"
                    >
                    <ImageView 
                        android:id="@+id/iv_user"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_change_passenger"
                        android:layout_centerVertical="true"/>
                    <EditText 
                        android:id="@+id/tv_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_28"
                        android:background="@null"
                        android:layout_marginLeft="12dp"
                        android:singleLine="true"
                        android:layout_toRightOf="@+id/iv_user"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout 
                    android:id="@+id/rlyt_contacts"
                    android:layout_weight="13"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="@color/white_gray"
                        android:layout_centerVertical="true"/>
                    
                    <ImageView 
                        android:id="@+id/iv_contacts"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_maillist"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"/>
                    <TextView 
                        android:id="@+id/tv_contacts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contacts"
                        android:textColor="@color/word_gray"
                        android:textSize="@dimen/txt_size_28"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/iv_contacts"
                        android:layout_centerVertical="true"/>
                    </RelativeLayout>
            </LinearLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white_gray"/>
            <RelativeLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="58.5dp"
                    android:paddingLeft="22.9dp"
                    >
                    <ImageView 
                        android:id="@+id/iv_phone"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_phone"
                        android:layout_centerVertical="true"/>
                    <EditText 
                        android:id="@+id/tv_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_28"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/iv_phone"
                        android:singleLine="true"
                        android:inputType="number"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
              <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white_gray"/>
              <RelativeLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="58.5dp"
                    android:paddingLeft="22.9dp"
                    >
                   <CheckBox 
	                  android:id="@+id/chk_sms"
	                  android:layout_width="12dp"
	                  android:layout_height="12dp"
	                  android:background="@drawable/chk_style"  
            	      android:button="@null"  
            	      android:checked="true"
            	      android:layout_centerVertical="true"/>
                    <TextView 
                        android:id="@+id/tv_sms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sms_notification"
                        android:textColor="#9b9b9b"
                        android:textSize="@dimen/indoor_font_24"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/chk_sms"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
              <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white_gray"/>
        </LinearLayout>
    </ScrollView>
    
    
</LinearLayout>
