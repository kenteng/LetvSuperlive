<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shar_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#000000"
    android:gravity="center" >

    <TextView
        android:id="@+id/top_sh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:layout_marginTop="25dp"
        android:drawablePadding="15dp"
        android:text="@string/shared"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <View
        android:id="@+id/line_v"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/top_sh"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="166dp"
        android:layout_marginRight="166dp"
        android:background="#ffffff" />

    <LinearLayout
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_v"
        android:layout_marginLeft="170dp"
        android:layout_marginRight="170dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_share_wx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/share_wx" />

        <ImageView
            android:id="@+id/iv_share_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/share_friend" />

        <ImageView
            android:id="@+id/iv_share_wb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/share_wb" />

        <ImageView
            android:id="@+id/iv_share_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/share_qq" />
    </LinearLayout>

    <View
        android:id="@+id/line_v2"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/share"
        android:layout_marginLeft="166dp"
        android:layout_marginRight="166dp"
        android:layout_marginTop="35dp"
        android:background="#ffffff" />

    <TextView
        android:id="@+id/cancel_sh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_v2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="19.5dp"
        android:text="@string/cancel"
        android:textColor="#ffffff"
        android:textSize="13sp" />

</RelativeLayout>