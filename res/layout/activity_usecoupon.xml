<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#060f23"
        android:paddingBottom="0dp"
         >

        <TextView
            android:id="@+id/coupon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="@string/coupon_shiyong"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/coupon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back" />

    </RelativeLayout>


    <!-- 选项卡 -->

    <LinearLayout
        android:id="@+id/coupon_ii_lottery_category"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="#040917"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/coupon_t_order_wait_pay"
            style="@style/service_top_select"
            android:text="@string/coupon_keyong" />

        <TextView
            android:id="@+id/coupon_t_order_wait_send"
            style="@style/service_top_select"
            android:text="@string/coupon_shixiao" />
    </LinearLayout>

    <!-- 下划线 -->

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/black" >

        <View
            android:id="@+id/coupon_tabImgView"
            android:layout_width="160dp"
            android:layout_height="2dp"
            android:background="@color/service_select_txt" />
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/coupon_pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="#111a32"
        android:layout_weight="1" />
    
    

</LinearLayout>
