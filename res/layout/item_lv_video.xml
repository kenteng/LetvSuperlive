<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/video_hright_ligth_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
        <ImageView 
            android:id="@+id/video_hrightlight_lv_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/shape_top_to_down" >

            <ImageView
                android:id="@+id/video_hrightlight_lv_item_titleimageView1"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="9.5dp"
                android:layout_marginBottom="9.5dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_playbutton" />

            <TextView
                android:id="@+id/video_hrightlight_lv_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/video_hrightlight_lv_item_titleimageView1"
                android:layout_toRightOf="@+id/video_hrightlight_lv_item_titleimageView1"
                android:text="马力布超远三分"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/video_hrightlight_lv_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/video_hrightlight_lv_item_title"
                android:layout_below="@+id/video_hrightlight_lv_item_title"
                android:text="第三节 9：55"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>