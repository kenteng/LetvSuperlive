<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#060f23"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/power_item_position_tv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="4" />

    <RelativeLayout
       android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" >
        <com.lesports.stadium.view.CircleImageView
        android:id="@+id/power_item_head_civ"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:src="@drawable/default_header"
        android:layout_marginTop="25dp"
        app:border_color1="#26ffffff"
        app:border_width1="2dp" />
    </RelativeLayout>
<RelativeLayout 
     android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent" 
    >
    <LinearLayout
       android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/power_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
        android:textSize="@dimen/indoor_font_24"
            android:text="放鸽子的夏天" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:textColor="#909194"
        android:textSize="@dimen/indoor_font_24"
                android:text="贡献了" />

            <TextView
                android:id="@+id/power_item_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:textColor="#46cafd"
        android:textSize="@dimen/indoor_font_24"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
                android:text="2000" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:textColor="#909194"
        android:textSize="@dimen/indoor_font_24"
                android:text="能量值" />

        </LinearLayout>

    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#33ffffff"
        android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <!-- 结束 -->
</LinearLayout>
